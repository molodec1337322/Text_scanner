<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings_black_24dp"
            android:background="@drawable/btn_round_bg"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1">

        <com.textscanner.app.custom.AutoFitTextureView
            android:id="@+id/tv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/btn_process_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_check_black_60dp"
                android:background="@drawable/btn_round_bg"
                android:visibility="invisible"/>

            <ImageButton
                android:id="@+id/btn_make_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_photo_camera_black_60dp"
                android:background="@drawable/btn_round_bg"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <ImageButton
                android:id="@+id/btn_remake_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_refresh_black_60dp"
                android:background="@drawable/btn_round_bg"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>